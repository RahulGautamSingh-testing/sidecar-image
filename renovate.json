      "fileMatch": ["config/options/index.ts"],
      "matchStrings": [
        "default: 'ghcr.io/(?<depName>containerbase/sidecar):(?<currentValue>.*)'"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
